<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.rummy500scorepad">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Enter2PlayersNames"
            android:label="@string/enter_two_names">
        </activity>
        <activity
            android:name=".Enter3PlayersNames"
            android:label="@string/enter_three_names">
        </activity>
        <activity
            android:name=".Enter4PlayersNames"
            android:label="@string/enter_four_names">
        </activity>
        <activity
            android:name=".Game2Players"
            android:label="@string/game_two_players">
        </activity>
        <activity
            android:name=".Game3Players"
            android:label="@string/game_three_players">
        </activity>
        <activity
            android:name=".Game4Players"
            android:label="@string/game_four_players">
        </activity>
    </application>

</manifest>